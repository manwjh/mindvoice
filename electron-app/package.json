{
  "name": "mindvoice",
  "version": "1.2.0",
  "description": "MindVoice - AI-powered cross-platform desktop voice assistant",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5173 && electron .",
    "build": "npm run build:vite && npm run build:electron",
    "build:vite": "vite build",
    "build:electron": "tsc -p electron",
    "pack": "electron-builder",
    "dist": "npm run build && electron-builder"
  },
  "keywords": [
    "voice",
    "assistant",
    "ai",
    "speech-to-text",
    "asr",
    "electron",
    "mindvoice"
  ],
  "author": "深圳王哥 & AI <manwjh@126.com>",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.mindvoice.app",
    "productName": "MindVoice",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json"
    ],
    "icon": "assets/ico.png",
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/ico.png",
      "target": [
        "dmg",
        "zip"
      ]
    },
    "win": {
      "icon": "assets/ico.png",
      "target": [
        "nsis",
        "zip"
      ]
    },
    "linux": {
      "icon": "assets/ico.png",
      "target": [
        "AppImage",
        "deb"
      ]
    }
  }
}

